<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.kp"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Google Analytics Version v4 needs this value for easy tracking -->
    <meta-data
        android:name="com.google.android.gms.analytics.globalConfigResource"
        android:resource="@xml/global_tracker" />

    <application
        android:name="com.app.kp.AppController"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.app.kp.LauncherActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.kp.NavigationDrawerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.TranslucentActionBar" >
        </activity>
        <activity
            android:name="com.app.kp.FullPhotoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.app.kp.FullPhotoViewActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.app.kp.VideoDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.app.kp.VideoPlayActivity" >
        </activity>
        <activity
            android:name="com.app.kp.ArticleActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.app.kp.ArticleContentActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name="com.app.kp.TestActivity" >
        </activity>
        <activity
            android:name=".ReferenceActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>